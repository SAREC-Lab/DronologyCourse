<?xml version="1.0" encoding="UTF-8"?>
<configuration name="citeomat" packages="net.mv.logging">
	<properties>
	
	<property name="net.mv.filepath">logs\citeomat.log</property>
	<property name="net.mv.filename">citeomat</property>
	<property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS}  [%-5.5p] %-20M | %-5C:%L | %msg%n</property>
		
	</properties>
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%-5p] %-20M @ (%F:%L) %m%n"/>
		</Console>
		

		
		<RollingFile name="RollingFile" fileName="${net.mv.filepath}"
				 filePattern="logs\${net.mv.filename}-%i.log">
			<PatternLayout>
			<pattern>${pattern}</pattern>
				<!-- <pattern>"%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"</pattern>-->
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB"/> <!-- Or every 100 MB -->
			</Policies>
			<DefaultRolloverStrategy max="2"/>
		</RollingFile>
		
	
		
		
	</appenders>
	<loggers>
		<root level="debug"> <!-- We log everything -->
			<appender-ref ref="Console"/> <!-- To console -->
			<appender-ref ref="RollingFile"/> <!-- And to a rotated file -->
		</root>
	</loggers>
</configuration>